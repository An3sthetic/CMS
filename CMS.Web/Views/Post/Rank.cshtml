@model IEnumerable<CMS.Domain.ViewModels.PostViewModel>
@{
    ViewData["Title"] = "Rank";
}

<h2>Rank</h2>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommentCount)
            </th>
            <th>
                @Html.Raw("Score")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="myRow">
                <td>
                    @item.Author
                </td>
                <td>
                    @item.PostCount
                </td>
                <td>
                    @item.ViewCount
                </td>
                <td>
                    @item.CommentCount
                </td>
                <td>
                    @((item.PostCount * 2) + (item.CommentCount * 1) + (item.ViewCount * 3))
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css">
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>

        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>

}